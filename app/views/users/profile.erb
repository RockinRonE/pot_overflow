<h1>Welcome Back, <%= @user.name %></h1>
<h2><%= @user.email %><h2>

<% if @success %>
<p> <%= @success %></p>
<% end %>

<h2>Recent Questions</h2>
  <% @user.questions.each do |question| %>
  <div class="row">
    <div class="col-md-3"><%= question.title %></div>
    <div class="col-md-9"><%= question.content %></div>
  </div>
  <% end %>

<a href="#" data-toggle="modal" data-target="#new_question_modal">New Question</a>
<!-- <a href="/questions/new"><button id="new_question_button">Submit New Question</button></a> -->

<h2>Recent Answers</h2>
<div class="row">
  <% @user.answers.each do |answer| %>
    <div class="col-md-3 col-md-pull-9"><%= answer.content %></div>
  <% end %>
</div>


